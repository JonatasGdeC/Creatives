@using Creatives.Shared.CropperImageComponent

<MudDialog>
  <DialogContent>
    <CropperImageComponent @ref="_cropRef" Image="@Image" OnCropComplete="@HandleCroppedImage"/>
  </DialogContent>
  <DialogActions>
    <MudButton OnClick="@Cancel" Color="Color.Transparent" Variant="Variant.Filled">Cancelar</MudButton>
    <MudButton OnClick="@Confirm" Color="Color.Primary" Variant="Variant.Filled">Confirmar</MudButton>
  </DialogActions>
</MudDialog>
